@model MantenimientoCrud.Models.AR_Account

@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row" style="margin-top:30px">
    <div class="col-sm-12">
        <div class="card border-warning">
            <div class="card-header bg-warning">
                <h4 class="card-title">Editar</h4>
            </div>
            <div class="card-body">
                <form action="@Url.Action("Editar","Mantenimiento")" method="post">
                    <div class="form-group">
                        <label for="Name">Nombre</label>
                        <input type="text" id="Name" name="Name" value="@Html.DisplayTextFor(m => m.Name)" required maxlength="50" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="Company">Compañia</label>
                        <input type="text" id="Company" name="Company" value="@Html.DisplayTextFor(m => m.Company)" required maxlength="50" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="City">Ciudad</label>
                        <input type="text" id="City" name="City" value="@Html.DisplayTextFor(m => m.City)" required maxlength="50" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="Country">Pais</label>
                        <input type="text" id="Country" name="Country" value="@Html.DisplayTextFor(m => m.Country)" required maxlength="30" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="PhoneNumber">Telefono</label>
                        <input type="text" id="PhoneNumber" name="PhoneNumber" value="@Html.DisplayTextFor(m => m.PhoneNumber)" required maxlength="30" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="EMail">Correo</label>
                        <input type="text" id="EMail" name="EMail" value="@Html.DisplayTextFor(m => m.EMail)" required maxlength="255" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="ClosingDate">Cierre</label>
                        <input type="datetime-local" id="ClosingDate" name="ClosingDate"
                               value="@(Model.ClosingDate.HasValue ? Model.ClosingDate.Value.ToString("yyyy-MM-ddTHH:mm") : "")" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="Notes">Notas</label>
                        <input type="text" id="Notes" name="Notes" value="@Html.DisplayTextFor(m => m.Notes)" required class="form-control" />
                    </div>
                    <div class="card-footer" style="margin-top:20px">
                        <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                        <a class="btn btn-warning" href="@Url.Action("Inicio","Mantenimiento")">Cancelar Cambios</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
